{
  "name": "hw-agent-ui",
  "displayName": "HW Agent UI",
  "description": "VS Code extension to drive the hardware agent demo: view DAG state, logs, and trigger runs.",
  "version": "0.0.1",
  "publisher": "sd1-experiment",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onCommand:hwAgent.refresh",
    "onCommand:hwAgent.runDemo",
    "onView:hwAgent.nodes",
    "onView:hwAgent.chat",
    "onCommand:hwAgent.showLogs",
    "onCommand:hwAgent.openChat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hwAgent.refresh",
        "title": "HW Agent: Refresh State"
      },
      {
        "command": "hwAgent.runDemo",
        "title": "HW Agent: Run Demo"
      },
      {
        "command": "hwAgent.showLogs",
        "title": "HW Agent: Show Node Logs"
      },
      {
        "command": "hwAgent.openChat",
        "title": "HW Agent: Open Spec Chat"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "hwAgent.nodes",
          "name": "HW Agent DAG"
        }
      ],
      "hwAgent": [
        {
          "id": "hwAgent.chat",
          "name": "HW Spec Chat",
          "type": "webview"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hwAgent",
          "title": "HW Agent",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "HW Agent UI",
      "properties": {
        "hwAgent.apiBaseUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "Base URL for the backend bridge (exposes /state, /logs, /run, /rerun, /events)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@types/node-fetch": "^2.6.4",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
